{% extends 'base.html.twig' %}

{% block title %}Polls!{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Dostępne ankiety</h2>
        <a href="{{ path('app_poll_create') }}" class="btn btn-success">Dodaj ankietę</a>
    </div>
    {% for item in pollsWithVotes %}
        {% set poll = item.poll %}
        {% set totalVotes = item.totalVotes %}
        <div class="col">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">{{ poll.question }}</h5>
                    <p class="card-text text-muted">
                        Łączna liczba głosów: {{ totalVotes }}
                    </p>
                </div>
                <div class="card-footer text-end bg-white border-top-0">
                    <a href="{{ path('app_poll_info', {'id': poll.id}) }}" class="btn btn-outline-primary">
                        Więcej informacji
                    </a>
                </div>
            </div>
        </div>
    {% else %}
        <div class="col">
            <p class="text-muted">Brak ankiet.</p>
        </div>
    {% endfor %}
</div>


{% endblock %}
